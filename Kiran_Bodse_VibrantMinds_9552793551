<style>
    body {background-color: powderblue;}
   
    .box1{
        width: 100px;
       height: 100px;
      position: relative;
    }
          
</style>
<body>
    <div class="container">
        <div class="row">
            <button type="button" id="A"class="box1 bg-danger col-6 "></button>
            <button type="button" id="B"class="box1 bg-warning col-6 "></button>
      
         
          <div class="w-100"></div>
      
          <button type="button" id="C"class="bg-info col-6 box1 "></button>
          <button type="button" id="D"class="bg-success col-6 box1"></button>
         
          <div class="w-100"></div>
      
          <button type="button" id="box"class="col-6 box1 " onclick="rotate()">Clockwise</button>
          <button type="button" id="box"class="col-6 box1" onclick="rotateA()">Anti-clockwise</button>
          
        </div>
      </div>
      <script>
        function rotate(){
     
            var box = document.getElementById("A").style.left="100px";
            var box = document.getElementById("B").style.top="100px";
            var box = document.getElementById("C").style.bottom="100px";
            var box = document.getElementById("D").style.right="100px";
        }
        function rotateA(){
     
     var box = document.getElementById("A").style.top="100px";
     var box = document.getElementById("B").style.right="100px";
     var box = document.getElementById("C").style.left="100px";
     var box = document.getElementById("D").style.bottom="100px";
     }
    
     </script>
</body>
